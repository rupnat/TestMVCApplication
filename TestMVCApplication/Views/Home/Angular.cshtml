<!DOCTYPE html>
<html ng-app="AngularApp">
<head>
    <title>Angular Test application</title>
    <script src="https://code.angularjs.org/1.3.0-beta.5/angular.js"></script>
    <script src="~/Scripts/AngularApp.js"></script>
</head>
<body ng-controller="CustomerController">
    <br />
    <br />
    <p>Search by Customer ID 
    <input type="text" ng-model="username.CustomerID"></p>
    {{error}}
    <table border="1">
        <tr>
            <th>
                Customer ID
            </th>
            <th>
                Company Name
            </th>
            <th>
                Contact Name
            </th>
        </tr>
        <tr ng-repeat="customer in Customers | filter:username">
            <td>
                {{customer.CustomerID}}
            </td>
            <td>
                {{customer.CompanyName}}
            </td>
            <td>
                {{customer.ContactName}}
            </td>
        </tr>
    </table>

</body>
</html>